syntax on	
set background=dark
set showcmd
set clipboard=unnamedplus

filetype plugin on
set tabstop=4
set softtabstop=2
set shiftwidth=2
set expandtab
set autoindent
set smartindent
set cinw=if,else,while,do,for,switch,begin,case
set nowrap

set splitright
set splitbelow
set number
set nohls
inoremap ^q <Esc>

set path+=**
set wildmenu
set noswapfile
